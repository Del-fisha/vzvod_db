<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://addressDetailView.title"
      focusComponent="form">
    <data>
        <instance id="addressDc"
                  class="com.company.vzvod.entity.Address">
            <fetchPlan extends="_base"/>
            <loader id="addressDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="addressDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="indexField" property="index"/>
            <textField id="cityField" property="city"/>
            <textField id="streetField" property="street"/>
            <textField id="houseNumberField" property="houseNumber"/>
            <textField id="bodyField" property="body"/>
            <textField id="flatField" property="flat"/>
            <select id="typeOfHousingField" property="typeOfHousing"/>
            <select id="statusOfHousingField" property="statusOfHousing"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
