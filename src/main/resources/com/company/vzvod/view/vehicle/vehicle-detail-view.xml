<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://vehicleDetailView.title"
      focusComponent="form">
    <data>
        <instance id="vehicleDc"
                  class="com.company.vzvod.entity.Vehicle">
            <fetchPlan extends="_base"/>
            <loader id="vehicleDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="vehicleDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="stateNumberField" property="stateNumber"/>
            <textField id="modelField" property="model"/>
            <textField id="brandField" property="brand"/>
            <textField id="registrationCertificateField" property="registrationCertificate"/>
            <datePicker id="insuranceField" property="insurance"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
