<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://userDetailView.title"
      focusComponent="form">
    <data>
        <instance id="userDc"
                  class="com.company.vzvod.entity.User">
            <fetchPlan extends="_base">
                <property name="serviceInfo">
                    <property name="rank"/>
                    <property name="status"/>
                    <property name="post"/>
                    <property name="idCard" fetchPlan="_base"/>
                    <property name="token"/>
                    <property name="breastplate"/>
                    <property name="startDate"/>
                    <property name="startOfPost"/>
                </property>
                <property name="contactsInfo" fetchPlan="_base">
                    <property name="registration" fetchPlan="_base"/>
                    <property name="habitation" fetchPlan="_base"/>
                </property>
                <property name="education" fetchPlan="_base"/>
                <property name="vehicleInfo" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="userDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="userDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="firstNameField" property="firstName"/>
            <textField id="lastNameField" property="lastName"/>
            <textField id="patronymicField" property="patronymic"/>
            <datePicker id="dateOfBirthField" property="dateOfBirth"/>

            <button id="serviceInfoCreateButton" text="msg://com.company.vzvod.view.user.user/serviceInfoButtonCreate.text"/>
            <button id="contactsCreateButton" text="msg://com.company.vzvod.view.user.user/contactsButtonCreate.text"/>
            <button id="educationCreateButton" text="msg://com.company.vzvod.view.user.user/educationButtonCreate.text"/>
            <button id="vehicleCreateButton" text="msg://com.company.vzvod.view.user.user/vehicleButtonCreate.text"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
