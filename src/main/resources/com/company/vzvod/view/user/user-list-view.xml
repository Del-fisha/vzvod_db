<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://userListView.title"
      focusComponent="usersDataGrid">
    <data>
        <collection id="usersDc"
                    class="com.company.vzvod.entity.User">
            <fetchPlan extends="_base">
                <property name="serviceInfo" fetchPlan="_base">
                    <property name="department" fetchPlan="_base"/>
                </property>
                <property name="contactsInfo" fetchPlan="_base"/>
                <property name="education" fetchPlan="_base"/>
                <property name="vehicleInfo" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="usersDl" readOnly="true">
                <query>
                    <![CDATA[select e from User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="usersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <startSlot>
                <button id="createButton" action="usersDataGrid.createAction"/>
                <button id="editButton" action="usersDataGrid.editAction"/>
                <button id="removeButton" action="usersDataGrid.removeAction"/>
            </startSlot>
            <endSlot>
                <simplePagination id="pagination" dataLoader="usersDl"/>
            </endSlot>
        </hbox>
        <dataGrid id="usersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="usersDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="username"/>
                <column property="firstName"/>
                <column property="lastName"/>
                <column property="patronymic"/>
                <column property="dateOfBirth"/>
                <column property="serviceInfo"/>
                <column property="contactsInfo"/>
                <column property="education"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
