<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://userView.title">
    <data>
        <instance id="userDc" class="com.company.vzvod.entity.User" fetchPlan="_local">
            <loader id="userDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox height="100%" width="100%">
            <vbox height="100%" width="40%">
                <image height="150px" width="150px" maxWidth="150px" maxHeight="150px"
                       resource="classpath:/pic/Question.jpeg"/>
                <formLayout id="userForm" dataContainer="userDc">
                    <textField property="firstName" readOnly="true"/>
                    <textField property="lastName" readOnly="true"/>
                    <textField property="patronymic" readOnly="true"/>
                    <datePicker property="dateOfBirth" readOnly="true"/>
                </formLayout>
                <button text="msg://mainInfoEdit.text" id="editBtn"/>
            </vbox>
            <div id="divider" width="2px" height="100%" classNames="divider">
            </div>
            <vbox width="60%" height="100%">

                <vbox>
                    <nativeLabel id="serviceInfoLabel" text="msg://serviceInfoNativeLabel.text"/>
                    <textField id="serviceInfoDisplay" readOnly="true"/>
                    <hbox>
                        <button id="serviceInfoEdit" text="msg://serviceInfoEdit.text"/>
                        <button id="serviceInfoViewDetails" text="msg://vehiclesViewDetails.text"/>
                    </hbox>
                </vbox>

                <vbox>
                    <nativeLabel id="contactsLabel" text="msg://contactsNativeLabel.text"/>
                    <textField id="contactsDisplay" readOnly="true"/>
                    <hbox>
                        <button id="contactsEdit" text="msg://contactsEdit.text"/>
                        <button id="contactsViewDetails" text="msg://contactsViewDetails.text"/>
                    </hbox>
                </vbox>

                <vbox>
                    <nativeLabel id="vehicleLabel" text="msg://vehicleNativeLabel.text"/>
                    <textField id="vehiclesDisplay" readOnly="true"/>
                    <hbox>
                        <button id="vehiclesEdit" text="msg://vehiclesEdit.text"/>
                        <button id="vehiclesViewDetails" text="msg://vehiclesViewDetails.text"/>
                    </hbox>
                </vbox>

                <vbox>
                    <nativeLabel id="educationLabel" text="msg://educationNativeLabel.text"/>
                    <textField id="educationDisplay" readOnly="true"/>
                    <hbox>
                        <button id="educationEdit" text="msg://educationEdit.text"/>
                        <button id="educationViewDetails" text="msg://educationViewDetails.text"/>
                    </hbox>
                </vbox>
            </vbox>
        </hbox>
    </layout>
</view>