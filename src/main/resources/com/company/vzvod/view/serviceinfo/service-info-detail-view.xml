<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://serviceInfoDetailView.title"
      focusComponent="form">
    <data>
        <instance id="serviceInfoDc"
                  class="com.company.vzvod.entity.ServiceInfo">
            <fetchPlan>
                <property name="idCard" fetchPlan="_instance_name">
                    <property name="issued"/>
                    <property name="until"/>
                </property>
                <property name="rank"/>
                <property name="status"/>
                <property name="post"/>
                <property name="token"/>
                <property name="breastplate"/>
                <property name="startDate"/>
                <property name="startOfPost"/>
            </fetchPlan>
            <loader id="serviceInfoDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="serviceInfoDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <select id="departmentField" property="department"/>
            <select id="rankField" property="rank"/>
            <select id="statusField" property="status"/>
            <select id="postField" property="post"/>
            <entityPicker id="idCardField" property="idCard">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="tokenField" property="token"/>
            <textField id="breastplateField" property="breastplate"/>
            <datePicker id="startDateField" property="startDate"/>
            <datePicker id="startOfPostField" property="startOfPost"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
