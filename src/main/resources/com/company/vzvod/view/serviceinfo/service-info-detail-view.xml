<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://serviceInfoDetailView.title"
      focusComponent="form">
    <data>
        <instance id="serviceInfoDc"
                  class="com.company.vzvod.entity.ServiceInfo">
            <fetchPlan>
                <property name="idCard" fetchPlan="_instance_name">
                    <property name="issued"/>
                    <property name="until"/>
                </property>
                <property name="rank"/>
                <property name="status"/>
                <property name="post"/>
                <property name="token"/>
                <property name="breastplate"/>
                <property name="startDate"/>
                <property name="startOfPost"/>
                <property name="department"/>
            </fetchPlan>
            <loader id="serviceInfoDl"/>
        </instance>
        <collection id="departmentsDc" class="com.company.vzvod.entity.Department">
            <loader id="departmentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Department e]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>


    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="serviceInfoDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityComboBox id="departmentField"
                            property="department"
                            dataContainer="serviceInfoDc"
                            itemsContainer="departmentsDc" width="100px"/>


            <select id="rankField" property="rank"/>
            <select id="statusField" property="status"/>
            <select id="postField" property="post"/>

            <textField id="tokenField" property="token"/>
            <textField id="breastplateField" property="breastplate"/>
            <datePicker id="startDateField" property="startDate"/>
            <button id="idCardCreateButton" text="msg://com.company.vzvod.view.user.user/idCardButtonCreate.text"/>

            <datePicker id="startOfPostField" property="startOfPost"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
