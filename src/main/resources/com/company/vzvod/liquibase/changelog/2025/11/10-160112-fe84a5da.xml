<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Vzvod">
        <addColumn tableName="USER_">
            <column name="PASSWORD" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="Vzvod">
        <addColumn tableName="USER_">
            <column name="USERNAME" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="USERNAME" defaultNullValue="''" tableName="USER_"/>
    </changeSet>
    <changeSet id="3" author="Vzvod">
        <createIndex indexName="IDX_USER__ON_USERNAME" tableName="USER_" unique="true">
            <column name="USERNAME"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>