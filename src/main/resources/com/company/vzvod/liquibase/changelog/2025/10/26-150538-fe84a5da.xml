<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Vzvod">
        <createTable tableName="ADDRESS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADDRESS"/>
            </column>
            <column name="INDEX_" type="VARCHAR(6)"/>
            <column name="CITY" type="VARCHAR(50)"/>
            <column name="STREET" type="VARCHAR(255)"/>
            <column name="HOUSE_NUMBER" type="VARCHAR(5)"/>
            <column name="BODY_" type="VARCHAR(4)"/>
            <column name="FLAT" type="VARCHAR(10)"/>
            <column name="TYPE_OF_HOUSING" type="VARCHAR(255)"/>
            <column name="STATUS_OF_HOUSING" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Vzvod">
        <createTable tableName="CONTACTS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CONTACTS"/>
            </column>
            <column name="PHONE_NUMBER" type="VARCHAR(28)"/>
            <column name="REGISTRATION_ID" type="UUID"/>
            <column name="HABITATION_ID" type="UUID"/>
            <column name="NEAREST_METRO_STATION" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Vzvod">
        <createTable tableName="EDUCATION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EDUCATION"/>
            </column>
            <column name="STARTED" type="DATE"/>
            <column name="UNTIL_" type="DATE"/>
            <column name="TYPE_" type="VARCHAR(255)"/>
            <column name="STATUS" type="VARCHAR(255)"/>
            <column name="NAME_OF_INSTITUTION" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="Vzvod">
        <createTable tableName="ID_CARD">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ID_CARD"/>
            </column>
            <column name="SPL" type="VARCHAR(6)"/>
            <column name="ISSUED" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="UNTIL_" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="Vzvod">
        <createTable tableName="SERVICE_INFO">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SERVICE_INFO"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="POST" type="VARCHAR(255)"/>
            <column name="DEPARTMENT" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ID_CARD_ID" type="UUID"/>
            <column name="TOKEN" type="VARCHAR(255)"/>
            <column name="BREASTPLATE" type="VARCHAR(8)"/>
            <column name="START_DATE" type="DATE"/>
            <column name="START_OF_POST" type="DATE"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="Vzvod">
        <createTable tableName="VEHICLE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_VEHICLE"/>
            </column>
            <column name="STATE_NUMBER" type="VARCHAR(10)"/>
            <column name="MODEL" type="VARCHAR(50)"/>
            <column name="BRAND" type="VARCHAR(50)"/>
            <column name="REGISTRATION_CERTIFICATE" type="VARCHAR(255)"/>
            <column name="INSURANCE" type="DATE"/>
            <column name="USER_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="7" author="Vzvod">
        <addColumn tableName="USER_">
            <column name="CONTACTS_INFO_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="8" author="Vzvod">
        <addColumn tableName="USER_">
            <column name="DATE_OF_BIRTH" type="DATE"/>
        </addColumn>

        <addNotNullConstraint columnName="DATE_OF_BIRTH" defaultNullValue="now" tableName="USER_"/>
    </changeSet>
    <changeSet id="9" author="Vzvod">
        <addColumn tableName="USER_">
            <column name="PATRONYMIC" type="VARCHAR(20)"/>
        </addColumn>

        <addNotNullConstraint columnName="PATRONYMIC" defaultNullValue="''" tableName="USER_"/>
    </changeSet>
    <changeSet id="10" author="Vzvod">
        <createIndex indexName="IDX_CONTACTS_HABITATION" tableName="CONTACTS">
            <column name="HABITATION_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="HABITATION_ID" baseTableName="CONTACTS"
                                 constraintName="FK_CONTACTS_ON_HABITATION" referencedColumnNames="ID"
                                 referencedTableName="ADDRESS"/>
    </changeSet>
    <changeSet id="11" author="Vzvod">
        <createIndex indexName="IDX_CONTACTS_REGISTRATION" tableName="CONTACTS">
            <column name="REGISTRATION_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="REGISTRATION_ID" baseTableName="CONTACTS"
                                 constraintName="FK_CONTACTS_ON_REGISTRATION" referencedColumnNames="ID"
                                 referencedTableName="ADDRESS"/>
    </changeSet>
    <changeSet id="12" author="Vzvod">
        <createIndex indexName="IDX_SERVICE_INFO_ID_CARD" tableName="SERVICE_INFO">
            <column name="ID_CARD_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ID_CARD_ID" baseTableName="SERVICE_INFO"
                                 constraintName="FK_SERVICE_INFO_ON_ID_CARD" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="ID_CARD"/>
    </changeSet>
    <changeSet id="13" author="Vzvod">
        <createIndex indexName="IDX_SERVICE_INFO_USER" tableName="SERVICE_INFO">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="SERVICE_INFO"
                                 constraintName="FK_SERVICE_INFO_ON_USER" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="14" author="Vzvod">
        <createIndex indexName="IDX_USER__CONTACTS_INFO" tableName="USER_">
            <column name="CONTACTS_INFO_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CONTACTS_INFO_ID" baseTableName="USER_"
                                 constraintName="FK_USER__ON_CONTACTS_INFO" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="CONTACTS"/>
    </changeSet>
    <changeSet id="15" author="Vzvod">
        <createIndex indexName="IDX_VEHICLE_USER" tableName="VEHICLE">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="VEHICLE" constraintName="FK_VEHICLE_ON_USER"
                                 onDelete="CASCADE" referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="16" author="Vzvod">
        <dropColumn columnName="ACTIVE" tableName="USER_"/>

        <dropColumn columnName="EMAIL" tableName="USER_"/>

        <dropColumn columnName="TIME_ZONE_ID" tableName="USER_"/>

        <dropColumn columnName="VERSION" tableName="USER_"/>
    </changeSet>
    <changeSet id="17" author="Vzvod">
        <modifyDataType columnName="FIRST_NAME" newDataType="VARCHAR(20)" tableName="USER_"/>
    </changeSet>
    <changeSet id="18" author="Vzvod">
        <addNotNullConstraint columnDataType="VARCHAR(20)" columnName="FIRST_NAME" tableName="USER_" validate="true"/>
    </changeSet>
    <changeSet id="19" author="Vzvod">
        <modifyDataType columnName="LAST_NAME" newDataType="VARCHAR(20)" tableName="USER_"/>
    </changeSet>
    <changeSet id="20" author="Vzvod">
        <addNotNullConstraint columnDataType="VARCHAR(20)" columnName="LAST_NAME" tableName="USER_" validate="true"/>
    </changeSet>
</databaseChangeLog>