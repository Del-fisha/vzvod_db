<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Vzvod">
        <createTable tableName="DEPARTMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEPARTMENT"/>
            </column>
            <column name="NUMBER_" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Vzvod">
        <addColumn tableName="USER_">
            <column name="DEPARTMENT_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="Vzvod">
        <createIndex indexName="IDX_USER__DEPARTMENT" tableName="USER_">
            <column name="DEPARTMENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="DEPARTMENT_ID" baseTableName="USER_"
                                 constraintName="FK_USER__ON_DEPARTMENT" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="DEPARTMENT"/>
    </changeSet>
    <changeSet id="4" author="Vzvod">
        <dropColumn columnName="DEPARTMENT" tableName="SERVICE_INFO"/>
    </changeSet>
</databaseChangeLog>